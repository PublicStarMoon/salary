view, text {
  box-sizing: border-box;
  font-family: Microsoft Yahei, 'Times New Roman', Times, serif;
}

#app {
  width: 100%;
  height: 100%;
  position: fixed;
  display: flex;
}

.left{
  color: #fff;
  width: 40%;
  min-width: 40%;
  height: 100%;
  background-color: #152a65;
  padding-left: 100px;
}

.right{
  color: #152a65;
  flex: 1;
  height: 100%;
  padding-right: 100px;
  padding-left: 100px;
}
.left,.right{
  overflow-y: auto;
  padding-bottom: 20px;
}

.header{
  height: 80px;
  display: flex;
}
.right .header{
  justify-content: flex-end;
}
.header-item{
  width: 140px;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 20px;
  font-weight: bold;
  cursor: pointer;
  color: inherit;
  text-decoration: none;
}
.header-item .ei-info-sign{
  font-size: 14px;
}
.header-item.large {
  width: 160px;
}
.header-item:hover{
  text-decoration: underline;
}
.header-item i {
  margin-right: 5px;
}
.salary-item{
  margin-bottom: 5px;
  font-size: 16px;
}
.salary-title{
  font-weight: bold;
  margin-right: 10px;
  /* background-color: #fff;
  color: #152a65; */
}
.right .salary-title, .right .salary-wrapper-title{
  background-color: #152a65;
  color: #fff;
  padding: 3px;
}
.salary-input{
  display: inline-block;
  width: 100px;
  font-size: 16px;
  background-color: transparent;
  border: none;
  outline: none;
  color: #fff;
  border-bottom: 1px solid #eee;
  text-align: center;
}
.salary-result{
  border-bottom: 1px solid #152a65;
  text-align: center;
}
.salary-wrapper-title{
  margin-top: 10px;
  margin-bottom: 10px;
}
.salary-wrapper .salary-item{
  padding-left: 10px;
}
.ei-info-sign{
  font-size: 14px;
  margin-left: 5px;
  cursor: pointer;
}
.salary-not-nec{
  position: absolute;
  visibility: hidden;
}
.salary-not-nec.show{
  position: relative;
  visibility: visible;
}
.input-more{
  margin-bottom: 15px;
  text-decoration: underline;
  cursor: pointer;
}

.input-area i{
  font-size: 14px;
  margin-right: 5px;
}

.info-detail{
  display: inline-block;
  width: 15px;
  height: 15px;
  border: 1px solid #fff;
  /* vertical-align: middle; */
  text-align: center;
  border-radius: 50%;
  font-size: 12px;
  margin: 0 3px;
}
.right .info-detail{
  border: 1px solid #152a65;
}
@media screen and (max-width: 600px){
  #app{
      height: auto;
      display: block;
      position: relative;
  }
  .left, .right{
      width: auto;
      height: auto;
      padding: 20px;
  }
  .left{
      padding-top: 50px;
  }
  .header{    
      height: 40px;
      position: fixed;
      top: 0px;
      color: #fff;
      left: 0px;
      z-index: 100;
  }
  .header-item{
      width: 120px;
      font-size: 16px;
  }
  .right .header{
      right: 10px;
  }
  .left .header {
      background-color: #152a65;
      width: 100%;
  }
  
}
